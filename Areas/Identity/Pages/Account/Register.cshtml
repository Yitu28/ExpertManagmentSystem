@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title"> የክልል ተጠቃሚ መመዝገብ </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label> ሙሉ ስም </label>
                    <input asp-for="Input.Full_Name" class="form-control" autocomplete="Full_Name" aria-required="true" />
                    <span asp-validation-for="Input.Full_Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input type="hidden" asp-for="UserDepartmentId" class="form-control" />
                </div>
                <div class="form-floating">
                    <input type="hidden" asp-for="UserParentId" class="form-control" />
                </div>
                <div class="form-floating">
                    <input type="hidden" asp-for="DepartmentCategory" class="form-control" />
                </div>

                <div class="form-group col-md-6">
                    <label> ኢሜል  </label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label> የይለፍ ቃል </label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label> የይለፍ ቃል ያረጋግጡ </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"> መዝግቡ </button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
</div>

