@using ExpertManagmentSystem.Enums
@model ExpertManagmentSystem.Models.DocumentModel.Doc_CivilAssosation

@{
    ViewData["Title"] = "Edit";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">የሲቪል ማህበራትን መረጃን መለወጥ  </h3>
