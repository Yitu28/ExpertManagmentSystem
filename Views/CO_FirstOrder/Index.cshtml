@model IEnumerable<ExpertManagmentSystem.Models.Corruption.CO_FirstOrder>

@{
    ViewData["Title"] = "Index";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color:#123456;color:white;">
                        <h5 class="card-title">መሪ ትዕዛዝ ዝርዝር  </h5>
                        <a asp-action="Create" class="btn btn-success float-right" style="color:white;"> አዲስ ጨምር </a>                           
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProsecotorRecordNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ZoneProsecotorRecordNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DefendantName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Zone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OpeningDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Amount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Comment)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Remark)
                                    </th>
									<th>
										@Html.DisplayNameFor(model => model.SectrorsDepartment)
									</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                 @foreach (var item in Model) 
                                 {
                                    <tr>
                                        <td> 
                                            @Html.DisplayFor(modelItem => item.ProsecotorRecordNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ZoneProsecotorRecordNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DefendantName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Zone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OpeningDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Comment)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remark)
                                        </td>
										<td>
											@Html.DisplayFor(modelItem => item.SectrorsDepartment.DepartmentName)
										</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.CO_FirstOrderId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.CO_FirstOrderId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.CO_FirstOrderId">Delete</a>
                                        </td>
                                    </tr>
                                 }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
</section>
<script>
    $(function () {
      $("#example1").DataTable({
        "responsive": true, "lengthChange": false, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
    });
</script>