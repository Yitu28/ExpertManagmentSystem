@using ExpertManagmentSystem.Enums
@using ExpertManagmentSystem.Models.CivilCaseModels
@model ExpertManagmentSystem.Models.CivilCaseModels.CCFreelServices
@using ExpertManagmentSystem.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="modal fade" id="addFreeLabrsmodals" aria-labelledby="addFreeLabrsLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" style="width:850px">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title"> የመንግስት ሰበር ተጠሪ </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color:white;">×</span></button>
                </div>
                <div class="card-body">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var userDepartment = (DepartmentCategory)user.DepartmentCategory;
                        <form asp-action="FreeLabarsCreate" method="post">
                            <div asp-validation-summary="ModelOnly " class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label class="control-label"> የዐ/ህ/መ/ቁጥር  </label>
                                    <input asp-for="FileNo" class="form-control" />
                                    <span asp-validation-for="FileNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label"> የፍ/ቤት/መ/ቁጥር  </label>
                                    <input asp-for="RecorNo" class="form-control" />
                                    <span asp-validation-for="RecorNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="control-label"> ሰበር አመልካች </label>
                                    <input asp-for="Applicant" class="form-control" />
                                    <span asp-validation-for="Applicant" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label"> ሰበር ተጠሪ </label>
                                    <input asp-for="Responder" class="form-control" />
                                    <span asp-validation-for="Responder" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="typesofIssue" class="control-label"></label>
                                    @Html.DropDownList("typesofIssue", Html.GetEnumSelectList<CaseTypes>(), " የጉዳይ አይነት ይምረጡ ", new { @class = "form-control" })
                                    <span asp-validation-for="typesofIssue" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Doo" class="control-label"></label>
                                    <input type="Date" asp-for="Doo" class="form-control" />
                                    <span asp-validation-for="Doo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="AmountinBirr" class="control-label"></label>
                                    <input asp-for="AmountinBirr" class="form-control" />
                                    <span asp-validation-for="AmountinBirr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="Amountincarie" class="control-label"></label>
                                    <input asp-for="Amountincarie" class="form-control" />
                                    <span asp-validation-for="Amountincarie" class="text-danger"></span>
                                </div>
                                @if (userDepartment == DepartmentCategory.ቢሮ)
                                {
                                    <div class="form-group col-md-4">
                                        <label asp-for="ZonalSectorsId" class="control-label"></label>
                                        <select asp-for="ZonalSectorsId" class="form-control ZonalSectorsId" id="ZonalSectorsId"></select>
                                        <span asp-validation-for="ZonalSectorsId" class="text-danger"></span>
                                    </div>


                                    <div class="form-group col-md-4">
                                        <label asp-for="WoredaSectorsId" class="control-label"></label>
                                        <select asp-for="WoredaSectorsId" class="form-control WoredaSectorsIds" id="WoredaSectorsIds"></select>
                                        @* <select asp-for="WoredaSectorsId" class="form-control WoredaSectorsId" id="WoredaSectorsId"></select> *@
                                        <span asp-validation-for="WoredaSectorsId" class="text-danger"></span>
                                    </div>
                                }
                                else if (userDepartment == DepartmentCategory.መምሪያ)
                                {
                                    <div class="form-group col-md-8">
                                        <label asp-for="WoredaSectorsId" class="control-label"></label>
                                        <select asp-for="WoredaSectorsId" class="form-control WoredaSectorsIds" id="WoredaSectorsIds"></select>
                                        <span asp-validation-for="WoredaSectorsId" class="text-danger"></span>
                                    </div>
                                }
                                else
                                {
                                }
                                @* <div class="form-group col-md-4">
                                    <label asp-for="ZonalSectorsId" class="control-label"></label>
                                    <input asp-for="ZonalSectorsId" class="form-control" />
                                    <span asp-validation-for="ZonalSectorsId" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="WoredaSectorsId" class="control-label"></label>
                                    <input asp-for="WoredaSectorsId" class="form-control" />
                                    <span asp-validation-for="WoredaSectorsId" class="text-danger"></span>
                                </div> *@
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="Doa" class="control-label"></label>
                                    <input type="Date" asp-for="Doa" class="form-control" />
                                    <span asp-validation-for="Doa" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="ExpertName" class="control-label"></label>
                                    <input asp-for="ExpertName" class="form-control" />
                                    <span asp-validation-for="ExpertName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="DoAss" class="control-label"></label>
                                    <input type="Date" asp-for="DoAss" class="form-control" />
                                    <span asp-validation-for="DoAss" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="DoRet" class="control-label"></label>
                                    <input type="Date" asp-for="DoRet" class="form-control" />
                                    <span asp-validation-for="DoRet" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="LOS" class="control-label"></label>
                                    <input type="text" asp-for="LOS" class="form-control" />
                                    <span asp-validation-for="LOS" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <i class="fa fa-floppy-disk"></i>
                                <input type="submit" value="ይመዝግቡ" class="btn float-right btn-primary" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>