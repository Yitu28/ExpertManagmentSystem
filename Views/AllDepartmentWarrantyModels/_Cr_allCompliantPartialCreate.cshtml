@using ExpertManagmentSystem.Enums
@using Microsoft.AspNetCore.Mvc.RazorPages
@model ExpertManagmentSystem.Models.CrimeModels.AllDepartmentWarrantyModel


<div class="modal fade" id="CrimeCopliantCreate" aria-labelledby="addRegionLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content" style="width:850px">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title"> የአቤቱታ መመዝግቢያ ፎርም </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color:white;">×</span></button>
                </div>
                <form asp-action="CompliantCreate" method="post">
                    <div asp-validation-summary="ModelOnly " class="text-danger"></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label asp-for="OpeninigDate" class="control-label"></label>
                                <input asp-for="OpeninigDate" class="form-control" />
                                <span asp-validation-for="OpeninigDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="ProcsecuterNo" class="control-label"></label>
                                <input asp-for="ProcsecuterNo" class="form-control" />
                                <span asp-validation-for="ProcsecuterNo" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="PoliceRecordNo" class="control-label"></label>
                                <input asp-for="PoliceRecordNo" class="form-control" />
                                <span asp-validation-for="PoliceRecordNo" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="CourtNo" class="control-label"></label>
                                <input asp-for="CourtNo" class="form-control" />
                                <span asp-validation-for="CourtNo" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="ApplicantName" class="control-label"></label>
                                <input asp-for="ApplicantName" class="form-control" />
                                <span asp-validation-for="ApplicantName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                @*<label asp-for="Gender" class="control-label"></label>*@
                                @Html.DropDownList("Gender", Html.GetEnumSelectList<Gender>(), "ጾታ", new { @class = "form-control Mapandplans", id = "DepartmentCategory" })
                                @*<select asp-for="Gender" class="form-control"></select>*@
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="WhereItCameFrom" class="control-label"></label>
                                <input asp-for="WhereItCameFrom" class="form-control" />
                                <span asp-validation-for="WhereItCameFrom" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Cr_Crime_TypeId" class="control-label">የወንጀል አይነት</label>
                                <select asp-for="Cr_Crime_TypeId" class="form-control Cr_Crime_TypeId" asp-items="ViewBag.Cr_Crime_TypeId"></select>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="DateOfDirectedToProsecuter" class="control-label"></label>
                                <input asp-for="DateOfDirectedToProsecuter" class="form-control" />
                                <span asp-validation-for="DateOfDirectedToProsecuter" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="DateOfDoneAndReturned" class="control-label"></label>
                                <input asp-for="DateOfDoneAndReturned" class="form-control" />
                                <span asp-validation-for="DateOfDoneAndReturned" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-4">
                                <label asp-for="Cr_ProsecutorComment" class="control-label">የዐ/ህግ አስተያየት</label>
                                @Html.DropDownList("Cr_ProsecutorComment", Html.GetEnumSelectList<Cr_ProsecutorComment>(), /*"የጠ/ፍ/ቤት ውሳኔ ይምረጡ !",*/ new { @class = "form-control Mapandplans", id = "DepartmentCategory" })
                                <span asp-validation-for="Cr_ProsecutorComment" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="SectrorsDepartmentId" class="control-label">የስራ ክፍል</label>
                                <select asp-for="SectrorsDepartmentId" class="form-control SectrorsDepartmentId" asp-items="ViewBag.SectrorsDepartmentId"></select>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <i class="fa fa-floppy-disk"></i>
                        <input type="submit" value="ይመዝግቡ" class="btn float-right btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
