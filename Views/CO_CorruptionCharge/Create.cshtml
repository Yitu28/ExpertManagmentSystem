@using ExpertManagmentSystem.Models.Corruption
@model ExpertManagmentSystem.Models.Corruption.CO_CorruptionCharge


@{
    ViewData["Title"] = "Create";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">የሙስና ክስ መመዝገቢያ</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="body-box">
                         <form asp-action="Create">
                             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                             <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="prosecutorNo" class="control-label"></label>
                                        <input asp-for="prosecutorNo" class="form-control" />
                                        <span asp-validation-for="prosecutorNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="InvestigationNo" class="control-label"></label>
                                        <input asp-for="InvestigationNo" class="form-control" />
                                        <span asp-validation-for="InvestigationNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="DecisionType" class="control-label"></label>
                                        <input asp-for="DecisionType" class="form-control" />
                                        <span asp-validation-for="DecisionType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="DefendentName" class="control-label"></label>
                                        <input asp-for="DefendentName" class="form-control" />
                                        <span asp-validation-for="DefendentName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="Gender" class="control-label"></label>
                                        @Html.DropDownList("Gender", Html.GetEnumSelectList<Gender>(), " ዖታ ይምረጡ ", new { @class = "form-control" })
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="Amount" class="control-label"></label>
                                        <input asp-for="Amount" class="form-control" />
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="DefendantJob" class="control-label"></label>
                                        <input asp-for="DefendantJob" class="form-control" />
                                        <span asp-validation-for="DefendantJob" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="CrimeType" class="control-label"></label>
                                        <select asp-for="CrimeType" class="form-control"></select>
                                        <span asp-validation-for="CrimeType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="OpeningDate" class="control-label"></label>
                                        <input asp-for="OpeningDate" class="form-control" />
                                        <span asp-validation-for="OpeningDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="InvestigationApproved" class="control-label"></label>
                                        <input asp-for="InvestigationApproved" class="form-control" />
                                        <span asp-validation-for="InvestigationApproved" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="Remark" class="control-label"></label>
                                        <input asp-for="Remark" class="form-control" />
                                        <span asp-validation-for="Remark" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="SectrorsDepartmentId" class="control-label"></label>
                                        <select asp-for="SectrorsDepartmentId" class ="form-control" asp-items="ViewBag.SectrorsDepartmentId"></select>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                  <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                  </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <a asp-action="Index" class="btn btn-info" style="color:white;"> ወደ ዝርዝር ተመለስ </a>
                                        @*  <a asp-action="Index">Back to List</a> *@
                                    </div>
                                </div>
                            </div>
                         </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
