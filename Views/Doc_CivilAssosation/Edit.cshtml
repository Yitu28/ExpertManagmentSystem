              <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="AssosationName" class="control-label"></label>
                <input asp-for="AssosationName" class="form-control" />
                <span asp-validation-for="AssosationName" class="text-danger"></span>
            </div>
            </div>
                    <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            </div>
                    <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="licensedDate" class="control-label"></label>
                <input asp-for="licensedDate" class="form-control" />
                <span asp-validation-for="licensedDate" class="text-danger"></span>
            </div>
            </div>
