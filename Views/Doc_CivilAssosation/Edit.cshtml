            <div class="form-group">
                <label asp-for="licensedUpdateDate" class="control-label"></label>
                <input asp-for="licensedUpdateDate" class="form-control" />
                <span asp-validation-for="licensedUpdateDate" class="text-danger"></span>
            </div>
            </div>
                            <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="ServiceFee" class="control-label"></label>
                <input asp-for="ServiceFee" class="form-control" />
                <span asp-validation-for="ServiceFee" class="text-danger"></span>
            </div>
            </div>
                            <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="RecietNo" class="control-label"></label>
                <input asp-for="RecietNo" class="form-control" />
                <span asp-validation-for="RecietNo" class="text-danger"></span>
            </div>
            </div>
                    <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="AssosationAim" class="control-label"></label>
                <input asp-for="AssosationAim" class="form-control" />
                <span asp-validation-for="AssosationAim" class="text-danger"></span>
            </div>
            </div>
