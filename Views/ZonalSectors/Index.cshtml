@model IEnumerable<ExpertManagmentSystem.OrganizationalStructures.ZonalSectors>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">የዞን ተቋማት ዝርዝር ማውጫ</h3>
        <a asp-action="Create" class="btn btn-success float-right btn-circle  text-light btn-sm"> አዲስ መምሪያ </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ZonalSectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReginalSector)
            </th>
            <th></th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ZonalSectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReginalSector.ReginalSectorName)
            </td>
                <td>
                    <a asp-action="ZonalDepartment" class="btn btn-primary btn-circle  text-light btn-sm" asp-route-id="@item.ZonalSectorId">አዲስ የስራ ክፍል </a>
                    <a asp-action="Zonedepartmentlist" class="btn btn-info btn-circle  text-light btn-sm" asp-route-id="@item.ZonalSectorId">የስራ ክፍሎች</a>
                    
                </td>
           @* <td>
                <a asp-action="Edit" asp-route-id="@item.ZonalSectorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ZonalSectorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ZonalSectorId">Delete</a>
            </td>*@
        </tr>
}

            </tbody>
        </table>
    </div>
</div>
