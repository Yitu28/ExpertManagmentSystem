@using ExpertManagmentSystem.Enums
@model ExpertManagmentSystem.Models.EconomyModels.Eco_GeneralCourtDecission

@{
    ViewData["Title"] = "Create";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">የጠቅላይ ፍ/ቤት ውሳኔ መመዝገቢያ </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="body-box">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="GeneralCourtDecissionName" class="control-label"></label>
                <input asp-for="GeneralCourtDecissionName" class="form-control" />
                <span asp-validation-for="GeneralCourtDecissionName" class="text-danger"></span>
            </div>
            </div>
                                    <div class="col-sm-4">
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                @Html.DropDownList("Department", Html.GetEnumSelectList<Department>(), " የዲፓርትመንት አይነት ይምረጡ ", new { @class = "form-control" })
            </div>
            </div>
                                <div class="col-sm-4">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            </div>
             <div class="col-sm-4">
             <div class="form-group">
                   <a asp-action="Index" class="btn btn-info" style="color:white;"> ወደ ዝርዝር ተመለስ </a>

              </div>
              </div>
              </div>
        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
