                        @await Html.PartialAsync("_RolesEditPartialView", item)
                        <a asp-action="Delete" data-toggle="modal" data-target="@("#DeleteRolesmodals-"+item.Id)" data-url="@Url.Action($"Delete/{item.Id}")"><li class="fa fa-trash bg-red" title="ይሰረዝ"></li></a>
                        @await Html.PartialAsync("_DeleteRolesPartialView", item) *@
                        </td>
                    </tr>
                    i++;
